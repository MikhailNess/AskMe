<div class="container">
  <h2 class="title">Редактирование пользователя</h2>
  <%= render 'form_errors',user: @user%>
  <div class="mt-lg">
    <%= form_with model: @user, data: {turbo:false}  do |form|%>
      <p><%= form.label :name, 'Ваше Имя' %> </p>
      <p><%= form.text_field :name, class: 'form-text-field' %> </p>
      
      <p class="mt-lg"><%= form.label :nickname, 'Ник на сайте' %> </p>
      <p><%= form.text_field :nickname, class: 'form-text-field' %> </p>
      
      <p class="mt-lg">Если не хотите менять пароль - оставьте эти поля пустыми</p>
     
      <p class="mt-lg"><%= form.label :password, 'Пароль' %> </p>
      <p><%= form.password_field :password, class: 'form-text-field' %> </p>
      
      <p class="mt-lg"><%= form.label :password_confirmation, 'Подтверждение пароля'%> </p>
      <p><%= form.password_field :password_confirmation, class: 'form-text-field' %> </p>
    
      <p class="mt-lg"><%= form.label :color_preferences, 'выбирите цвет'%> </p>
      <p><%= form.color_field :color_preferences, class: 'form-text-field' %> </p>

      <p class="mt-lg"><%= form.submit 'Сохранить', class: 'button button_main' %>
      <span class="text-sm"> или <%= link_to 'Вернуться', :back %></span></p>
    <% end %>
  </div>
  <div class="mt-lg"> <%= button_to 'Удалить профиль', user_path(@user), method: :delete,
  form:{data: {turbo_confirm: 'Вы точно хотите удалить профиль?'}},
  class: 'text-red text-sm'%>
  </div>
</div>