<div class="container">
	<h2 class="title">Редактирование пользователя</h2>
	<%= render 'form_errors', user: @user %>
	<div class="mt">
		<%= form_with model: @user, data: {turbo: false} do |form| %>
			<p><%= form.label :name, 'Ваше Имя' %> </p>
			<p><%= form.text_field :name, class: 'form-text-field' %> </p>
			
			<p class="mt-md"><%= form.label :nickname, 'Ник на сайте' %> </p>
			<p><%= form.text_field :nickname, class: 'form-text-field' %> </p>
			
			<p class="mt-md"><%= form.label :email %> </p>
			<p><%= form.text_field :email, class: 'form-text-field' %> </p>
			
			<p class="mt-md"><%= form.label :password %> </p>
			<p><%= form.password_field :password, class: 'form-text-field' %> </p>
			
			<p class="mt-md"><%= form.label :password_confirmation %> </p>
			<p><%= form.password_field :password_confirmation, class: 'form-text-field' %> </p>
			
			<p class="mt-lg"><%= form.label :color_preferences, 'выбирите цвет вашего хедера' %> </p>
			<p><%= form.color_field :color_preferences, class: 'form-text-field' %> </p>
			
			<p class="mt-lg"><%= form.submit 'Сохранить', class: 'button button_main' %></p>
		<% end %>
	</div>
	<div class="mt-lg">
		<%= button_to 'Удалить профиль', user_path(@user), method: :delete,
									form: {data: {turbo_confirm: 'Вы точно хотите удалить профиль?'}},
									class: 'text-red text-sm' %>
	</div>
</div>
