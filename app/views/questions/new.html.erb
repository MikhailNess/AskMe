<div class="container">
	<h2 class="title-lg mb">Новый вопрос</h2>
	<form action="/questions" method="POST"></form>
	<% if @question.errors.full_messages.any? %>
		<div  class="mb message message-alert">
			<ul>
				<% @question.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	
	<div class="mt">
		<%= render 'form',question: @question %>
	</div>
</div>

