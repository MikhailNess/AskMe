<div class="container">
	<h2 class="title-lg mb">Новый вопрос</h2>
	<form action="/questions" method="POST"
	<%= form_with model: @question do |form| %>
		<p><%= form.label :body, 'Текст' %></p>
		<p><%= form.text_area :body, rows: 5, class: 'form-text-area' %></p>
		<p class="mt"><%= form.label :user_id %></p>
		<p><%= form.text_field :user_id, class: 'form-text-field' %></p>
		<p class="mt-lg"><%= form.submit 'Создать', class: 'button button_main' %></p>
		<p class="mt-lg"> <%= link_to 'Вернуться', :back %></p>
	<% end %>
</div>
