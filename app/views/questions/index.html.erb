<div class="container">
  <h2 class="title-lg mb-sm">
    Недавно добавились
  </h2>

  <div class="users-box">
    <% @users.each do |user| %>
      <%= render partial: 'users/user_avatar', locals: {user: user} %>
    <% end %>
  </div>
</div>

<div class="container mt-sm">
  <h2 class="title-lg">
    Наши хэштеги
  </h2>

  <%= render @hashtags %>
</div>


<div class="container mt-sm">
  <h2 class="title-lg">
    <%= inclination(@questions.count, 'Последний', 'Последние', 'Последние') %>
    <%= @questions.count %>
    <%= inclination(@questions.count, 'вопрос', 'вопроса', 'вопросов') %>
  </h2>
</div>

<% @questions.each do |question| %>
  <%= content_tag :div, class: "mt-sm container #{'transparent-title' if question.hidden?}" do %>
    <p class="mb text-sm text-gray">
      Вопрос <%= link_to "##{question.id}", question_path(question) %>
      для юзера <%= link_to "@#{question.user.nickname}", user_path(question.user) %>
    </p>
    <%= render question %>
  <% end %>
<% end %>
